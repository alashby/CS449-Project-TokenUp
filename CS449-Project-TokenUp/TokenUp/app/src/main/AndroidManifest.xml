        </activity>
        <activity
            android:name=".BrowseByActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ByFilterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FilteredBrowseActivity"
