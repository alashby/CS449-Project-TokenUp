<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_abilitieslabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Abilities: "/>

    <TextView
        android:id="@+id/text_abilities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/text_abilitieslabel" />

    <TextView
        android:id="@+id/text_numlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/text_abilities"
        android:layout_alignTop="@id/button_invisi"
        android:layout_alignBottom="@id/button_invisi"
        android:gravity="center"
        android:text="Number Affected: "/>

    <Button
        android:id="@+id/button_invisi"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_abilities"
        android:layout_alignParentEnd="true"
        android:text=""
        android:visibility="invisible" />

    <Button
        android:id="@+id/button_dec"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_abilities"
        android:layout_toRightOf="@id/text_numlabel"
        android:text="@string/dec"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_abilities"
        android:layout_toRightOf="@id/button_dec"
        android:layout_alignTop="@id/button_invisi"
        android:layout_alignBottom="@id/button_invisi"
        android:gravity="center"/>

    <Button
        android:id="@+id/button_setNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_abilities"
        android:layout_toRightOf="@id/text_num"
        android:text="Set Number"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_inc"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_abilities"
        android:layout_toRightOf="@id/text_num"
        android:text="@string/inc"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_setAll"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_abilities"
        android:layout_toRightOf="@id/button_inc"
        android:text="Set to All"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_desclabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/text_numlabel"
        android:text="Description: "
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_numlabel"
        android:layout_toRightOf="@id/text_desclabel"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_srclabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/text_desc"
        android:text="Source: "
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_src"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_desc"
        android:layout_toRightOf="@id/text_srclabel"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_src"
        android:layout_centerHorizontal="true"
        android:text="Delete" />

</android.widget.RelativeLayout>